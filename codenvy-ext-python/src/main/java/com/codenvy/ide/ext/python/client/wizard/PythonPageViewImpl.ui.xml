<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        @eval InputBackgroundColor com.codenvy.ide.api.theme.Style.getInputBackground();
        .field {
            background-color: InputBackgroundColor;
            color: #dbdbdb;
            border: 1px solid #191c1e;
            border-radius: 1px;
            box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.19) inset, 0px 1px 0px 0px rgba(223, 223, 223, 0.4);
            font-size: 12px;
            padding-left: 8px;
            height: 20px;
        }

        .projectNamePosition {
            position: relative;
            line-height: 29px;
            margin-left: 20px;

        }
        .spaceRight {
            margin-right: 8px;
            margin-top: 1px;
        }
        .mainDoc{
            margin: 15px;
        }

    </ui:style>
    <g:DockLayoutPanel unit="PX" debugId="mavenPageView-mainPanel" addStyleNames="{style.mainDoc}">
        <g:north size="50">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="138">
                    <g:FlowPanel>
                        <g:Label text="Type of project:"
                                 addStyleNames="{style.projectNamePosition}"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:SimplePanel addStyleNames="{style.spaceRight}">
                        <g:SimplePanel>
                            <g:ListBox ui:field="projectTypeField" multipleSelect="false" visibleItemCount="1" selectedIndex="0"
                                       debugId="mavenPageView-packagingField" width="396px" height="29px" addStyleNames="{style.field}">
                                <g:item value="standalone">
                                    Standalone application
                                </g:item>
                                <g:item value="web">
                                    Web application
                                </g:item>
                            </g:ListBox>
                        </g:SimplePanel>
                    </g:SimplePanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>